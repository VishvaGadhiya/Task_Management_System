@model Task_Management_System.Models.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h4 class="fw-bold mb-0">@ViewData["Title"]</h4>
                    <p class="small mb-0 opacity-75">Next steps to reset your password</p>
                </div>
                <div class="card-body p-4">
                    <div class="text-center">
                        <p class="mb-3">Please check your email for a link to reset your password.</p>
                        <p class="text-muted small">If you do not receive an email shortly, please check your spam folder or try again.</p>

                        <a asp-action="Login" class="btn btn-success mt-3 px-4 fw-semibold">
                            Back to Login
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">Need help? Contact support for assistance.</p>
            </div>
        </div>
    </div>
</div>
