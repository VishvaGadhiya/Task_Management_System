@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h4 class="fw-bold mb-0">Registration Successful</h4>
                    <p class="small mb-0 opacity-75">Verify your email to continue</p>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="alert alert-success small mb-4">
                        A confirmation link has been sent to your email.<br />
                        Please verify your email address to log in.
                    </div>

                    <a asp-action="Login" class="btn btn-primary w-100 py-2 fw-semibold">
                        Go to Login
                    </a>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">Need help? Contact support or check your spam folder.</p>
            </div>
        </div>
    </div>
</div>
