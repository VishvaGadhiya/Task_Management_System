@model Task_Management_System.Models.DTOs.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-sm rounded-4 border-0">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="fw-bold mb-1">Change Password</h4>
                    <p class="small opacity-75 mb-0">Update your current password</p>
                </div>

                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center small" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                            <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Enter your current password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter your new password" />
                            <span asp-validation-for="NewPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary py-2 fw-semibold w-100">
                                Change Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="Login" class="text-decoration-none small">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
