@model Task_Management_System.Models.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="fw-bold mb-0">Forgot Password</h4>
                    <p class="small mb-0 opacity-75">We’ll send you a link to reset your password</p>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ForgotPassword" method="post" novalidate>
                        <div class="row g-3">
                            <div class="col-12">
                                <div asp-validation-summary="All" class="text-danger small"></div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-12 mt-3">
                                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                                    Send Reset Link
                                </button>
                            </div>

                            <div class="col-12 text-center mt-3">
                                <p class="text-muted small mb-0">
                                    Remembered your password?
                                    <a asp-action="Login" class="text-decoration-none">Sign in</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted small">If you don’t receive the email, check your spam folder or contact support.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
