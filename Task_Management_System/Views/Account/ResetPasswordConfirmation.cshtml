@model Task_Management_System.Models.DTOs.ResetPasswordViewModel
@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-success text-white text-center rounded-top-4">
                    <h4 class="fw-bold mb-0">Password Reset Successful</h4>
                </div>
                <div class="card-body p-4 text-center">
                    <p class="mb-3 text-muted">
                        Your password has been reset successfully. You can now log in with your new password.
                    </p>

                    <a asp-action="Login" class="btn btn-success w-100 fw-semibold">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
